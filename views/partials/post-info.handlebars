<article class="post">
  <div class="post-box">
      <div class="title">
        <h3>{{title}}</h3>
      </div>
      <div class="pcontent">
          <p>{{post_content}}</p>
      </div>
      
      <div class="meta">
        By {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
  </div>
    </article>